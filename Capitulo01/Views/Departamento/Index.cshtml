@model IEnumerable<Modelo.Cadastros.Departamento>

@{
    Layout = "/views/shared/_IESLayout.cshtml";
}

@section styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.21/css/dataTables.bootstrap.min.css" />
    </environment>
}

@if (TempData["msg"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["msg"]
    </div>
}

<div class="card">
    <div class="card-header text-white bg-primary text-center h1">Departamentos</div>
    <div class="card-body">
        <table id="departamentos" class="table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartamentoID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Instituicao.Nome)
                    </th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartamentoID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Instituicao.Nome)
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.DepartamentoID" class="btn btn-warning btn-sm">Alterar</a>
                            <a asp-action="Details" asp-route-id="@item.DepartamentoID" class="btn btn-info btn-sm">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.DepartamentoID" class="btn btn-danger btn-sm">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Create" class="btn btn-success">Novo Departamento</a>
    </div>
    <div class="card-footer bg-secondary text-center">

    </div>
</div>

@section ScriptPage {
    <environment include="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.js"></script>

    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.21/js/jquery.dataTables.min.js"></script>
    </environment>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#departamentos').DataTable();
        })
    </script>
}
